<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StatsHeaderText">
        <item name="android:layout_margin">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#ffff00</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StatsLabelAttributeText">
        <item name="android:textAllCaps">true</item>item>
        <item name="android:textColor">#ff0000</item>item>
        <item name="android:textStyle">bold</item>item>
    </style>

    <style name="StatsValueAttributeText" parent="StatsLabelAttributeText">
    </style>
</resources>
