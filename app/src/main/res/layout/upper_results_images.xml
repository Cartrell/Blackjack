<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/guideMidCardsLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.38" />

    <android.support.constraint.Guideline
        android:id="@+id/guideMidCardsRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.59" />

    <android.support.constraint.Guideline
        android:id="@+id/guideDeckBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <android.support.constraint.Guideline
        android:id="@+id/guideUpperCardsTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <ImageView
        android:id="@+id/resultsUpperMid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/result_label_win"
        android:adjustViewBounds="true"
        app:layout_constraintLeft_toRightOf="@+id/guideMidCardsLeft"
        app:layout_constraintRight_toLeftOf="@+id/guideMidCardsRight"
        app:layout_constraintTop_toBottomOf="@+id/guideDeckBottom"
        app:layout_constraintBottom_toTopOf="@+id/guideUpperCardsTop"
        />

</android.support.constraint.ConstraintLayout>