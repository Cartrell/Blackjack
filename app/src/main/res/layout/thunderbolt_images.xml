<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/parentTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.0" />

    <android.support.constraint.Guideline
        android:id="@+id/parentBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1.0" />

    <android.support.constraint.Guideline
        android:id="@+id/guideLeftBoltLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <android.support.constraint.Guideline
        android:id="@+id/guideLeftBoltRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <android.support.constraint.Guideline
        android:id="@+id/guideMidBoltLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.38" />

    <android.support.constraint.Guideline
        android:id="@+id/guideMidBoltRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.59" />

    <android.support.constraint.Guideline
        android:id="@+id/guideRightBoltLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.71" />

    <android.support.constraint.Guideline
        android:id="@+id/guideRightBoltRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.91" />

    <ImageView
        android:id="@+id/thunderboltLeft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/thunderbolt"
        android:adjustViewBounds="true"
        app:layout_constraintLeft_toRightOf="@+id/guideLeftBoltLeft"
        app:layout_constraintRight_toLeftOf="@+id/guideLeftBoltRight"
        app:layout_constraintTop_toBottomOf="@+id/parentTop"
        app:layout_constraintBottom_toTopOf="@+id/parentBottom"
        />

    <ImageView
        android:id="@+id/thunderboltMid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/thunderbolt"
        android:adjustViewBounds="true"
        app:layout_constraintLeft_toRightOf="@+id/guideMidBoltLeft"
        app:layout_constraintRight_toLeftOf="@+id/guideMidBoltRight"
        app:layout_constraintTop_toBottomOf="@+id/parentTop"
        app:layout_constraintBottom_toTopOf="@+id/parentBottom"
        />

    <ImageView
        android:id="@+id/thunderboltRight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/thunderbolt"
        android:adjustViewBounds="true"
        app:layout_constraintLeft_toRightOf="@+id/guideRightBoltLeft"
        app:layout_constraintRight_toLeftOf="@+id/guideRightBoltRight"
        app:layout_constraintTop_toBottomOf="@+id/parentTop"
        app:layout_constraintBottom_toTopOf="@+id/parentBottom"
        />

</android.support.constraint.ConstraintLayout>